    <application android:label="@string/app_name"
                 android:theme="@style/defaultTheme"
                 android:icon="@drawable/icon_launcher">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SceneActivity" android:screenOrientation="landscape"/>
        <activity android:name=".LevelsActivity" android:screenOrientation="landscape"/>
        <activity android:name=".ModesActivity" android:screenOrientation="landscape"/>
        <activity android:name=".SettingsActivity" android:screenOrientation="landscape"/>
    </application>

</manifest> 
